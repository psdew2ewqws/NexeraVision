{
  "name": "printermaster-service",
  "version": "2.1.0",
  "description": "Enterprise-grade printer management service for restaurants",
  "main": "service/service-main.js",
  "scripts": {
    "start": "node service/service-main.js",
    "start:dev": "NODE_ENV=development nodemon service/service-main.js",
    "start:prod": "NODE_ENV=production node service/service-main.js",
    "test": "mocha tests/**/*.test.js --timeout 30000",
    "test:watch": "mocha tests/**/*.test.js --watch --timeout 30000",
    "test:coverage": "nyc mocha tests/**/*.test.js --timeout 30000",
    "lint": "eslint service/ tests/ --ext .js",
    "lint:fix": "eslint service/ tests/ --ext .js --fix",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/install-service.js --uninstall",
    "pm2:start": "pm2 start config/ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop printermaster-service",
    "pm2:restart": "pm2 restart printermaster-service",
    "pm2:logs": "pm2 logs printermaster-service",
    "health-check": "curl -f http://localhost:8182/health || exit 1",
    "type-check": "tsc --noEmit --project jsconfig.json"
  },
  "keywords": [
    "printer",
    "restaurant",
    "pos",
    "thermal-printer",
    "usb",
    "service",
    "enterprise",
    "reliability"
  ],
  "author": "Restaurant Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "electron-log": "^4.4.8",
    "electron-printer": "^0.0.5",
    "electron-updater": "^6.6.2",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^4.18.2",
    "jspdf": "^3.0.2",
    "node-thermal-printer": "^4.5.0",
    "usb": "^2.9.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "chai": "^4.3.8",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^16.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2"
  },
  "optionalDependencies": {
    "node-windows": "^1.0.0-beta.8",
    "pm2": "^5.3.0"
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**",
      "node_modules/**",
      "coverage/**"
    ],
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 70,
    "statements": 80
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/restaurant-platform/printer-master-v2.git"
  },
  "bugs": {
    "url": "https://github.com/restaurant-platform/printer-master-v2/issues"
  },
  "homepage": "https://github.com/restaurant-platform/printer-master-v2#readme"
}
