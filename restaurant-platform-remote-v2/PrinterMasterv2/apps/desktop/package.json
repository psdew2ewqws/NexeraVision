{
  "name": "restaurant-print-pro-desktop",
  "version": "2.0.0",
  "description": "RestaurantPrint Pro - Enterprise Desktop Application for Printer Management",
  "main": "main.js",
  "author": "Restaurant Platform Team",
  "license": "Proprietary",
  "private": true,
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3004",
    "dev:electron": "wait-on http://localhost:3004 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:next",
    "build:next": "next build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "start": "electron . --no-sandbox",
    "pack": "npm run build && electron-builder --dir --linux",
    "pack-simple": "npm run build && electron-builder --dir --linux appimage",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -mwl",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf out dist .next"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^1.12.1",
    "bonjour-service": "^1.3.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "escpos-usb": "^3.0.0-alpha.4",
    "jspdf": "^3.0.2",
    "machine-uuid": "^1.0.0",
    "next": "^14.0.3",
    "node-machine-id": "^1.1.12",
    "node-notifier": "^10.0.1",
    "node-thermal-printer": "^4.5.0",
    "puppeteer-core": "^24.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1",
    "systeminformation": "^5.21.22",
    "tailwind-merge": "^2.6.0",
    "ws": "^8.14.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/crypto-js": "^4.2.1",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "7zip-bin": "^5.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "27.3.11",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "5.9.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.restaurant.print-pro",
    "productName": "RestaurantPrint Pro",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
    "directories": {
      "output": "../../dist/desktop"
    },
    "compression": "normal",
    "files": [
      "main.js",
      "src/main/**/*",
      "services/**/*",
      "next-app/**/*",
      "resources/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Restaurant Platform"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "desktop": {
        "Name": "RestaurantPrint Pro",
        "Comment": "Enterprise Printer Management",
        "Categories": "Office;Network;",
        "StartupNotify": "true"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RestaurantPrint Pro"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "restaurant-platform",
      "repo": "printer-master-v2",
      "private": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  },
  "optionalDependencies": {
    "printer": "^0.4.0"
  }
}
