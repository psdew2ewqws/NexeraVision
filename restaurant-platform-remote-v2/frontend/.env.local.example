# Restaurant Platform Frontend Environment Configuration

# Backend API URL (Main Platform)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Integration Service API URL (Delivery Providers)
NEXT_PUBLIC_INTEGRATION_API_URL=http://localhost:3002

# PrinterMaster Service URL
NEXT_PUBLIC_PRINTER_SERVICE_URL=http://localhost:8182

# WebSocket URLs
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_INTEGRATION_WS_URL=ws://localhost:3002

# Application Environment
NODE_ENV=development

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_INTEGRATION_PORTAL=true
NEXT_PUBLIC_ENABLE_DELIVERY_PROVIDERS=true
NEXT_PUBLIC_ENABLE_WEBHOOK_MONITORING=true

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Production URLs (for reference, uncomment and modify for production)
# NEXT_PUBLIC_API_URL=https://api.yourrestaurant.com
# NEXT_PUBLIC_INTEGRATION_API_URL=https://integration.yourrestaurant.com
# NEXT_PUBLIC_PRINTER_SERVICE_URL=https://printer.yourrestaurant.com
# NEXT_PUBLIC_WS_URL=wss://api.yourrestaurant.com
# NEXT_PUBLIC_INTEGRATION_WS_URL=wss://integration.yourrestaurant.com
